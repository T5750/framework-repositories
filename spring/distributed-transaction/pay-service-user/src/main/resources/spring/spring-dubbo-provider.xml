<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans  
            http://www.springframework.org/schema/beans/spring-beans.xsd  
            http://code.alibabatech.com/schema/dubbo  
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="pay-service-user"/>

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}"/>

	<!-- 用dubbo协议在20900端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20887"/>

	<!-- 当ProtocolConfig和ServiceConfig某属性没有配置时,采用此缺省值 -->
	<dubbo:provider timeout="30000" threadpool="fixed" threads="500" accepts="1000"/>

	<!-- 声明需要暴露的账户服务接口 -->
	<dubbo:service retries="0" interface="t5750.pay.service.user.api.RpPayProductService"
				   ref="rpPayProductService"/>
	<dubbo:service retries="0" interface="t5750.pay.service.user.api.RpPayWayService" ref="rpPayWayService"/>
	<dubbo:service retries="0" interface="t5750.pay.service.user.api.RpUserInfoService" ref="rpUserInfoService"/>
	<dubbo:service retries="0" interface="t5750.pay.service.user.api.RpUserPayConfigService"
				   ref="rpUserPayConfigService"/>
	<dubbo:service retries="0" interface="t5750.pay.service.user.api.RpUserPayInfoService"
				   ref="rpUserPayInfoService"/>
</beans>  